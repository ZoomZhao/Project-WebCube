{
  "private": true,
  "name": "webcube-projects",
  "description": "Continuously updated JS infrastructure for modern web dev",
  "scripts": {
    "precommit": "webcube-precommit",
    "precommit:custom": "lerna run precommit:custom",
    "update": "npm run clear:deps && lerna bootstrap",
    "upgrade": "npm run clear:lock && npm run update",
    "clear:lock": "lerna exec -- rm yarn.lock package-lock.json 2>/dev/null || true && rm yarn.lock package-lock.json 2>/dev/null || true",
    "clear:deps": "lerna clean --yes 2>/dev/null || true && rm -rf ./node_modules 2>/dev/null || true",
    "lint": "webcube-lint",
    "lint:error": "webcube-lint-error"
  },
  "engines": {
    "node": ">=6"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run lint:error --",
      "git add"
    ]
  },
  "config": {
    "webcube": {
      "monorepo": {
        "root": "./"
      }
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {},
  "workspaces": [
    "webcube/",
    "nodecube/",
    "eslint-config-webcube/",
    "*-example-*/"
  ]
}
