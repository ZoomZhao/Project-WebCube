{
  "private": true,
  "name": "webcube-projects",
  "description": "Continuously updated JS infrastructure for modern web dev",
  "scripts": {
    "precommit": "webcube-precommit",
    "precommit:custom": "lerna run precommit:custom",
    "update": "webcube-monorepo-deps-update",
    "upgrade": "webcube-monorepo-deps-upgrade",
    "clear:lock": "webcube-monorepo-clear-lock",
    "clear:deps": "webcube-monorepo-clear-deps",
    "lint": "webcube-lint",
    "lint:error": "webcube-lint-error"
  },
  "engines": {
    "node": ">=6"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run lint:error --",
      "git add"
    ]
  },
  "config": {
    "webcube": {
      "monorepo": {
        "root": "./"
      }
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {},
  "workspaces": [
    "webcube/",
    "nodecube/",
    "eslint-config-webcube/",
    "*-example-*/"
  ]
}
