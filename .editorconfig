# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space

[*.{js,jsx}]
indent_size = 2
max_line_length = 80
trim_trailing_whitespace = true

[*.{css,scss}]
indent_size = 2
trim_trailing_whitespace = true

[*.{html}]
indent_size = 2
trim_trailing_whitespace = true
